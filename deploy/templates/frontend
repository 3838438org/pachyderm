[Unit]
Description = pfs service: {{.Name}}
After = docker.service
After = router.service
Requires = docker.service

[Service]
ExecStartPre = -/usr/bin/docker kill {{.Name}}
ExecStartPre = -/usr/bin/docker rm {{.Name}}
ExecStartPre = /usr/bin/docker pull {{.Container}}
ExecStart = /usr/bin/docker run --privileged=true --name {{.Name}} --link router:router -p {{.Port}}:80 -i {{.Container}} /go/bin/{{.Name}} http://router
ExecStop = /usr/bin/docker rm -f {{.Name}}

[X-Fleet]
Global=true
