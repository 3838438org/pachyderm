[Unit]
Description=Monitoring Service

[Service]
TimeoutStartSec=0
ExecStartPre=/usr/bin/docker kill {{.Name}}
ExecStartPre=/usr/bin/docker rm {{.Name}}
ExecStartPre=/usr/bin/docker pull pachyderm/pfs
ExecStart=/usr/bin/docker run --name {{.Name}} -p 80:80 -i pachyderm/pfs /go/bin/{{.Name}} {{.Nshards}}

[X-Fleet]
Global=true
