[Unit]
Description = pfs announce: master
PartOf = master-0-22.service
BindsTo = master-0-22.service

[Service]
ExecStart = /bin/sh -c "while true; do etcdctl set /pfs/master/0-22 '%H:59995' --ttl 60;sleep 45;done"
ExecStop = /usr/bin/etcdctl rm /pfs/master/0-22

[X-Fleet]
MachineOf = master-0-22.service
