[Unit]
Description = pfs announce: master
PartOf = master-7-22.service
BindsTo = master-7-22.service

[Service]
ExecStart = /bin/sh -c "while true; do etcdctl set /pfs/master/7-22 '%H:53454' --ttl 60;sleep 45;done"
ExecStop = /usr/bin/etcdctl rm /pfs/master/7-22

[X-Fleet]
MachineOf = master-7-22.service
