[Unit]
Description = pfs announce: master
PartOf = master-10-22.service
BindsTo = master-10-22.service

[Service]
ExecStart = /bin/sh -c "while true; do etcdctl set /pfs/master/10-22 '%H:50700' --ttl 60;sleep 45;done"
ExecStop = /usr/bin/etcdctl rm /pfs/master/10-22

[X-Fleet]
MachineOf = master-10-22.service
