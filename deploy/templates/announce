[Unit]
Description = pfs announce: {{.Name}}
PartOf = {{.Name}}.service
BindsTo = {{.Name}}.service

[Service]
ExecStart = /bin/sh -c "while true; do etcdctl set /pfs/{{.Name}} '%H:{{.Port}}' --ttl 60;sleep 45;done"
ExecStop = /usr/bin/etcdctl rm /pfs/{{.Name}}

[X-Fleet]
X-ConditionMachineOf = {{.Name}}.service
