[Unit]
Description = pfs announce: master
PartOf = master-2-12.service
BindsTo = master-2-12.service

[Service]
ExecStart = /bin/sh -c "while true; do etcdctl set /pfs/master/2-12 '%H:59903' --ttl 60;sleep 45;done"
ExecStop = /usr/bin/etcdctl rm /pfs/master/2-12

[X-Fleet]
MachineOf = master-2-12.service
