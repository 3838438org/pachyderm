[Unit]
Description = pfs service: {{.Name}}
After = docker.service
Requires = docker.service

[Service]
ExecStart = /usr/bin/docker run --privileged=true --name {{.Name}}-{{.Shard}}-{{.Nshards}}  -v /mnt/pfs:/mnt/pfs -i pachyderm/pfs /usr/bin/{{.Name}} {{.Shard}}/{{.Nshards}}
ExecStop = /usr/bin/docker rm -f {{.Name}}-{{.Shard}}-{{.Nshards}}
