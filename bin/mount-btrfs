#!/bin/sh

set -Ee

DIR="$(cd "$(dirname "${0}")" && pwd)"
cd "${DIR}"

. "${DIR}/lib/lib.sh"
. "${DIR}/../etc/env/pfs.env"

"${DIR}/clean-btrfs"

mkdir -p "${PFS_HOST_VOLUME}"
truncate "${PFS_DATA_IMG}" -s 10G
mkfs.btrfs "${PFS_DATA_IMG}"
echo mount "${PFS_DATA_IMG}" "${PFS_HOST_VOLUME}" >&2
mount "${PFS_DATA_IMG}" "${PFS_HOST_VOLUME}"
