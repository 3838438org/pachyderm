[Unit]
Description = pfs storage

[Service]
Type = oneshot
RemainAfterExit = yes
ExecStart = -/bin/sh -c "echo $(mkdir /var/lib/pfs)"
ExecStart = -/bin/sh -c "echo $(truncate /var/lib/pfs/data.img -s 10G)"
ExecStart = -/bin/sh -c "echo $(mkfs.btrfs `etcdctl get /pfs/config/DISK || echo /var/lib/pfs/data.img`)"
ExecStart = -/bin/sh -c "echo $(mkdir -p /var/lib/pfs/vol)"
ExecStart = -/bin/sh -c "echo $(mount `etcdctl get /pfs/config/DISK || echo /var/lib/pfs/data.img` /var/lib/pfs/vol)"

[X-Fleet]
Global=true
