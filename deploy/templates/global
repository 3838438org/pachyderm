[Unit]
Description=Monitoring Service

[Service]
TimeoutStartSec=0
ExecStartPre=/usr/bin/docker kill {{.Name}}
ExecStartPre=/usr/bin/docker rm {{.Name}}
ExecStartPre=/usr/bin/docker pull pachyderm/pfs
ExecStart=/usr/bin/docker run --name {{.Name}}
ExecStart=/usr/bin/docker --name {{.Name}} -v /mnt/pfs:/mnt/pfs -i pachyderm/pfs /usr/bin/{{.Name}}

[X-Fleet]
Global=true
