[Unit]
Description = pfs announce: master
PartOf = master-12-22.service
BindsTo = master-12-22.service

[Service]
ExecStart = /bin/sh -c "while true; do etcdctl set /pfs/master/12-22 '%H:61787' --ttl 60;sleep 45;done"
