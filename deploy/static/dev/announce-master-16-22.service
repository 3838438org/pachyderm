[Unit]
Description = pfs announce: master
PartOf = master-16-22.service
BindsTo = master-16-22.service

[Service]
ExecStart = /bin/sh -c "while true; do etcdctl set /pfs/master/16-22 '%H:61293' --ttl 60;sleep 45;done"
ExecStop = /usr/bin/etcdctl rm /pfs/master/16-22

[X-Fleet]
MachineOf = master-16-22.service
