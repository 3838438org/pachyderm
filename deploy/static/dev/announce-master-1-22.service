[Unit]
Description = pfs announce: master
PartOf = master-1-22.service
BindsTo = master-1-22.service

[Service]
ExecStart = /bin/sh -c "while true; do etcdctl set /pfs/master/1-22 '%H:64311' --ttl 60;sleep 45;done"
ExecStop = /usr/bin/etcdctl rm /pfs/master/1-22

[X-Fleet]
MachineOf = master-1-22.service
